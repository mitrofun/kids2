# http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab

[*.{js,es6,jsx,ts,tsx,py,html,css,less,sass}]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2